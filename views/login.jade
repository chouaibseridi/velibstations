extends layout

block content

    div.content
      div#map2.map
      div.sidebar
        .limiter
          .container-login100
            .wrap-login100
              form.login100-form.validate-form(type="form", action="/login", method="post")
                span.login100-form-title.p-b-43
                  | Connectez-vous pour continuer !
                .wrap-input100.validate-input(data-validate='Nom utilisateur obligatoire')
                  input.input100(type='text', name='username')
                  span.focus-input100
                  span.label-input100 Nom d'utilisateur
                .wrap-input100.validate-input(data-validate='Mot de passe obligatoire')
                  input.input100(type='password', name='password')
                  span.focus-input100
                  span.label-input100 Mot de passe
                .flex-sb-m.w-full.p-t-3.p-b-32
                  .contact100-form-checkbox
                    input#ckb1.input-checkbox100(type='checkbox', name='remember-me')
                    label.label-checkbox100(for='ckb1')
                      | Se souvenir de moi
                  div
                    a.txt1(href='#')
                      | Mot de passe oublié ?
                .container-login100-form-btn
                  button.login100-form-btn
                    | Connexion
                .text-center.p-t-46.p-b-20
                  a.txt2(href="/signup")
                    | ou créer un compte pour commencer !
                .login100-form-social.flex-c-m
                  a.login100-form-social-item.flex-c-m.bg1.m-r-5(href='#')
                    i.fa.fa-facebook-f(aria-hidden='true')
                  a.login100-form-social-item.flex-c-m.bg2.m-r-5(href='#')
                    i.fa.fa-twitter(aria-hidden='true')
              .login100-more(style="background-image: url('images/bg-01.jpg');")